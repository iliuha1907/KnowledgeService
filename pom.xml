<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.senla.training.hoteladmin</groupId>
    <artifactId>hotel-admin</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>

    <properties>
        <spring.version>5.2.9.RELEASE</spring.version>
        <spring.security.version>5.4.1</spring.security.version>
        <jjwt.version>0.9.1</jjwt.version>
        <hibernate.version>5.4.22.Final</hibernate.version>
        <log4j.version>2.12.0</log4j.version>
        <javax.servlet.version>3.1.0</javax.servlet.version>
        <org.mockito.version>1.10.19</org.mockito.version>
        <org.junit.version>5.7.0</org.junit.version>
        <org.modelmapper.version>2.3.8</org.modelmapper.version>
        <mysql.version>8.0.14</mysql.version>
        <javax.annotations.version>1.3.2</javax.annotations.version>
        <javax.xml.version>2.3.1</javax.xml.version>
        <jackson.version>2.11.2</jackson.version>
    </properties>

    <modules>
        <module>model</module>
        <module>exception</module>
        <module>service</module>
        <module>dao</module>
        <module>util</module>
        <module>csv-import-export</module>
        <module>dto</module>
        <module>controller</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.tomcat.maven</groupId>
                <artifactId>tomcat7-maven-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <url>http://localhost:8080/manager/text</url>
                    <server>TomcatServer</server>
                    <username>root</username>
                    <password>1234</password>
                    <path>/HotelAdminHuzei</path>
                    <update>true</update>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-checkstyle-plugin</artifactId>
                <version>3.1.1</version>
                <configuration>
                    <configLocation>config/checkstyle.xml</configLocation>
                    <suppressionsLocation>config/checkstyle-supressions.xml</suppressionsLocation>
                    <suppressionsFileExpression>checkstyle.supressions.file</suppressionsFileExpression>
                    <consoleOutput>true</consoleOutput>
                    <encoding>UTF-8</encoding>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    
    <dependencies>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-api</artifactId>
            <version>${log4j.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
            <version>${log4j.version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
            <version>${spring.version}</version>
        </dependency>
    </dependencies>
</project>